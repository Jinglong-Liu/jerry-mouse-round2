<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>com.github.ljl.jerrymouse.servlet.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>helloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>writerServlet</servlet-name>
        <servlet-class>com.github.ljl.jerrymouse.servlet.WriterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>writerServlet</servlet-name>
        <url-pattern>/test/writer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OutputStreamServlet</servlet-name>
        <servlet-class>com.github.ljl.jerrymouse.servlet.OutputStreamServlet</servlet-class>
        <init-param>
            <param-name>param1</param-name>
            <param-value>10</param-value>
        </init-param>
        <init-param>
            <param-name>param2</param-name>
            <param-value>value2</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>OutputStreamServlet</servlet-name>
        <url-pattern>/test/output-stream</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RequestApiServlet</servlet-name>
        <servlet-class>com.github.ljl.jerrymouse.servlet.RequestApiServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RequestApiServlet</servlet-name>
        <url-pattern>/test/request-api</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listenerServlet</servlet-name>
        <servlet-class>com.github.ljl.jerrymouse.servlet.ListenerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>listenerServlet</servlet-name>
        <url-pattern>/listener</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>helloFilter</filter-name>
        <filter-class>com.github.ljl.jerrymouse.servlet.HelloFilter</filter-class>
        <init-param>
            <param-name>filter-param1</param-name>
            <param-value>filter-value1</param-value>
        </init-param>
        <init-param>
            <param-name>filter-param2</param-name>
            <param-value>filter-value2</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>helloFilter</filter-name>
        <url-pattern>/.*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.github.ljl.jerrymouse.servlet.ContextAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.github.ljl.jerrymouse.servlet.ContextLifeStyleListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.github.ljl.jerrymouse.servlet.RequestAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.github.ljl.jerrymouse.servlet.RequestLifeStyleListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.github.ljl.jerrymouse.servlet.login.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.github.ljl.jerrymouse.servlet.login.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>welcomeServlet</servlet-name>
        <servlet-class>com.github.ljl.jerrymouse.servlet.login.servlet.WelcomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>welcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>


    <listener>
        <listener-class>com.github.ljl.jerrymouse.servlet.login.listener.SessionLifeStyleListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.github.ljl.jerrymouse.servlet.login.listener.SessionAttributeListener</listener-class>
    </listener>

    <session-config>
        <session-timeout>1</session-timeout>
        <cookie-config>
<!--            默认sessionId字段名称JSESSIONID, 可以在此处指定 -->
            <name>JSESSIONID</name>
<!--            默认，代表app下的所有request url，暂时只支持'/'-->
            <path>/</path>
        </cookie-config>
<!--        暂时只支持COOKIE跟踪-->
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
</web-app>